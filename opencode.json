{
  "$schema": "https://opencode.ai/config.json",
  "mode": {
    "gtd": {
      "prompt": "{file:./.opencode/prompts/gtd-master.md}",
      "temperature": 0.3
    }
  },
  "mcp": {
    "things": {
      "type": "local",
      "enabled": true,
      "command": [
        "uv",
        "--directory",
        "/Users/yushi/repo/mcp/Things3-MCP",
        "run",
        "Things3-MCP-server"
      ]
    },
    "google-calendar": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "@cocal/google-calendar-mcp"]
    }
  }
}
